<div class="row">
<%= render'layouts/sidebar' %>
    <div class= "col-8">
	<% if @diary.errors.any? %>
	  <div id="error_explanation" class="alert alert-danger">
	    <ul>
	      <% @diary.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

	<div class="row justify-content-center" >
		<div class="col-6">
			<%= form_for @diary,:url => {:action => :create} do |f| %>

			    <%= f.attachment_field :live_image, format: 'jpeg' ,class: "file" %>
				<div>
					<%= f.label :日付 %>
					<%= f.date_field :date %>
				</div>
				<div>
					<%= f.label :アーティスト %>
					<%= f.text_field :artist_name %>
				</div>
				<div>
					<%= f.label :ライブ名 %>
					<%= f.text_field :live_name %>
				</div>
				<div>
					<%= f.label :場所 %>
					<%= f.text_field :place %>
				</div>
				<div>
					<%= f.label :セットリスト %>
					<%= f.text_area :setlist %>
				</div>
				<div>
					<%= f.label :タイトル %>
					<%= f.text_field :title %>
				</div>
				<div>
					<%= f.label :コメント %>
					<%= f.text_area :impression %>
				</div>
				  <div class="tags">
				    <%= f.label :tag_list,"タグをカンマ区切りで入力" %>
				    <%= text_field_tag 'diary[tag_list]', @diary.tag_list.join(","), data: {role: "tagsinput"} %>
				  </div>
					<%= f.submit "登録" %>
				</div>
			<% end %>
			</div>
		</div>
	</div>
</div>