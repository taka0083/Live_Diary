<div class="row">
<%= render'layouts/sidebar' %>
    <div class= "col-8">
	<% if @diary.errors.any? %>
	  <div id="error_explanation" class="alert alert-danger">
	    <ul>
	      <% @diary.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>
	<%= form_for @diary,:url => {:action => :update} do |f| %>

	    <%= f.attachment_field :live_image, format: 'jpeg' ,class: "file" %>
		<div>
			<%= f.label :日付 %>
			<%= f.date_field :date %>
		</div>
		<div>
			<%= f.label :アーティスト %>
			<%= f.text_field :artist_name %>
		</div>
		<div>
			<%= f.label :ライブ名 %>
			<%= f.text_field :live_name %>
		</div>
		<div>
			<%= f.label :セットリスト %>
			<%= f.text_area :setlist %>
		</div>
		<div>
			<%= f.label :タイトル %>
			<%= f.text_field :title %>
		</div>
		<div>
			<%= f.label :コメント %>
			<%= f.text_area :impression %>
		</div>
		<div>
			<%= f.submit "登録" %>
		</div>
	<% end %>
	</div>
</div>